<div class="row form">

  <%= form_with(model: @group, local: true) do |f| %>

    <div class="col-md-8 col-md-offset-2">
      <h2><%= yield(:page_name) %></h2>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label "コミュニティ名を入力してください" %>
      <%= f.text_field :name, class: "form-controll" %>

      <%= f.label "仲間と継続したい習慣を入力してください" %>
      <%= f.text_field :habit, class: "form-controll" %>

      <%= f.label "コミュニティの概要を入力してください" %>
      <%= f.text_area :overview, class: "form-controll" %>
    </div>

    <div class="col-md-6 col-md-offset-3 submit">
      <%= f.submit yield(:submit_name), class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
