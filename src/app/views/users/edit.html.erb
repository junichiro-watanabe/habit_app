<% provide(:title, @user.name) %>
<% provide(:page, "edit") %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render('sidebar') %>
    </div>
    <div class="user-profile col-md-9">
      <% if @edit_element == "profile" %>
        <% provide(:page_name, "アカウント情報") %>
        <% provide(:submit_name, "編集する") %>
        <%= render "form" %>
      <% elsif @edit_element == "image" %>
        <% provide(:page_name, "プロフィール画面") %>
        <% provide(:submit_name, "変更する") %>
        <%= render "image_edit" %>
      <% end %>
    </div>
  </div>
</div>
